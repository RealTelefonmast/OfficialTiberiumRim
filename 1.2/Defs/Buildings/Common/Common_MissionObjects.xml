	<thingCategories>
		<li>BuildingsJoy</li>
	</thingCategories>
	<building>
		<joyKind>Telescope</joyKind>
	</building>
    <costList>
      <Steel>50</Steel>
      <ComponentIndustrial>1</ComponentIndustrial>
    </costList>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <MarketValue>450</MarketValue>
      <Mass>9</Mass>
      <JoyGainFactor>1.6</JoyGainFactor>
