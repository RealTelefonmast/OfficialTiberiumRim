	<factionDesignation>Common</factionDesignation>
	<TRCategory>Misc</TRCategory>
    <graphicData>
      <texPath>Buildings/Common/Research/TRtelescope</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawRotated>false</drawRotated>
      <shadowData>
        <volume>(0.3, 0.7, 0.3)</volume>
		<offset>(-0.03,0,-0.35)</offset>
      </shadowData>
    </graphicData>
	<requisites>
		<tiberiumResearchTasks>
			<li>GreenSky_T1</li>
		</tiberiumResearchTasks>
	</requisites>
