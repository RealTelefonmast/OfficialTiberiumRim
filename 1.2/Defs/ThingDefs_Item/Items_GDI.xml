<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="ResourceBase_TR">
		<defName>IonCannonBeacon</defName>
		<label>GS-2 beacon</label>
		<description>The GS-2 Godsend is used to designate an Ion Cannon-strike target, it will be placed and starts a timer, allowing your pawns to reach a safe distance.</description>
		<graphicData>
			<texPath>Items/Weapons/IonCannon_Beacon</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<resourceReadoutPriority>First</resourceReadoutPriority>
		<soundInteract>Metal_Drop</soundInteract>
		<soundDrop>Standard_Drop</soundDrop>
		<techLevel>Industrial</techLevel>
		<stackLimit>5</stackLimit>
		<statBases>
			<MaxHitPoints>200</MaxHitPoints>
			<MarketValue>750</MarketValue>
			<Mass>5</Mass>
			<Flammability>0</Flammability>
			<DeteriorationRate>0.25</DeteriorationRate>
		</statBases>
		<smeltable>false</smeltable>
		<intricate>true</intricate>
		<thingCategories>
			<li>Manufactured</li>
		</thingCategories>
	</ThingDef>
	
	<ThingDef ParentName="BuildingBase_TR">
		<defName>IonCannonBeacon_Placed</defName>
		<label>GS-2 beacon (placed)</label>
		<description>An active GS-2 beacon!</description>
		<graphicData>
			<texPath>Items/Weapons/IonCannon_Beacon</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<statBases>
			<MaxHitPoints>200</MaxHitPoints>
			<MarketValue>0</MarketValue>
			<Mass>5</Mass>
			<Flammability>0</Flammability>
		</statBases>
		<selectable>true</selectable>
		<drawerType>MapMeshOnly</drawerType>
		<scatterableOnMapGen>false</scatterableOnMapGen>
		<leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
	</ThingDef>
	
	<ThingDef ParentName="ResourceBase_TR">
		<defName>GDI_SonicCore</defName>
		<label>Sonic Energy Core</label>
		<description>Sonic technology is extremly experimental and needs special measures to be handled. This component serves as a core part in most sonic weaponry.</description>
		<graphicData>
			<texPath>Items/Resource/Core_Sonic</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<soundInteract>Metal_Drop</soundInteract>
		<soundDrop>Standard_Drop</soundDrop>
		<stackLimit>25</stackLimit>
		<statBases>
			<MaxHitPoints>150</MaxHitPoints>
			<MarketValue>350</MarketValue>
			<Mass>0.4</Mass>
			<Flammability>0.75</Flammability>
			<DeteriorationRate>0.90</DeteriorationRate>
		</statBases>
		<intricate>true</intricate>
		<thingCategories>
			<li>Manufactured</li>
		</thingCategories>
		<tickerType>Normal</tickerType>
		<comps>
			<li Class="CompProperties_Explosive">
				<explosiveRadius>2</explosiveRadius>
				<explosiveDamageType>TRSonic</explosiveDamageType>
				<explosiveExpandPerStackcount>0.1</explosiveExpandPerStackcount>
				<startWickHitPointsPercent>0.05</startWickHitPointsPercent>
				<wickTicks>
					<min>5</min>
					<max>5</max>
				</wickTicks>
			</li>
		</comps>
	</ThingDef>
	
