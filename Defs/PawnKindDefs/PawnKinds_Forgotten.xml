<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <PawnKindDef ParentName="MercenaryBase" Name="ForgottenBase" Abstract="True">
    <defaultFactionType>Forgotten</defaultFactionType>
    <backstoryFiltersOverride>
      <li>
        <categories>
			<li>Raider</li>
			<li>Tribe</li>
        </categories>
      </li>
    </backstoryFiltersOverride>
    <backstoryCryptosleepCommonality>0.08</backstoryCryptosleepCommonality>
    <baseRecruitDifficulty>0.6</baseRecruitDifficulty>
	<gearHealthRange>0.4~1.2</gearHealthRange>
    <initialWillRange>1~2</initialWillRange>
    <initialResistanceRange>5~10</initialResistanceRange>
    <invFoodDef>Pemmican</invFoodDef>
	<inventoryOptions>
      <skipChance>0.6</skipChance>
      <subOptionsChooseOne>
        <li>
          <choiceChance>70</choiceChance>
          <thingDef>Silver</thingDef>
          <countRange>10~25</countRange>
        </li>
        <li>
          <choiceChance>20</choiceChance>
          <thingDef>Gold</thingDef>
          <countRange>10~25</countRange>
        </li>
        <li>
          <choiceChance>10</choiceChance>
          <thingDef>TRBattleChip</thingDef>
          <countRange>1~3</countRange>
        </li>
      </subOptionsChooseOne>
	</inventoryOptions>
    <apparelAllowHeadgearChance>1</apparelAllowHeadgearChance>
	<aiAvoidCover>false</aiAvoidCover>
	<itemQuality>Normal</itemQuality>
	<combatPower>40</combatPower>
    <skills>
      <li>
        <skill>Shooting</skill>
        <range>0~10</range>
      </li>
    </skills>
	<biocodeWeaponChance>0.15</biocodeWeaponChance>
    <disallowedTraits>
      <li>BodyPurist</li>
    </disallowedTraits>
  </PawnKindDef>
  
  <PawnKindDef ParentName="ForgottenBase">
    <defName>Forgotten_BadMutant</defName>
    <label>mutant scavenger</label>
    <combatPower>40</combatPower>
	<canBeSapper>true</canBeSapper>
    <itemQuality>Poor</itemQuality>
    <weaponMoney>400~750</weaponMoney>
    <apparelMoney>800~1500</apparelMoney>
	<apparelTags>
	  <li>ForgottenSet</li>  
    </apparelTags>
    <weaponTags>
		<li>Scrapgun</li>
		<li>Gun</li>
		<li>NonNeolithicOnlyMelee</li>
    </weaponTags>
  </PawnKindDef>

  <PawnKindDef Name="GoodMutantBase" ParentName="ForgottenBase">
    <defName>Forgotten_GoodMutant</defName>
    <label>mutant marauder</label>
    <combatPower>100</combatPower>
    <weaponMoney>2000~2000</weaponMoney>
    <apparelMoney>3000~3000</apparelMoney>
	<aiAvoidCover>true</aiAvoidCover>
	<apparelTags>
	  <li>ForgottenSet</li>  
    </apparelTags>
    <weaponTags>
		<li>Scrapgun</li>
		<li>Shardgun</li>
    </weaponTags>
  </PawnKindDef>
 
  <PawnKindDef ParentName="GoodMutantBase">
    <defName>Forgotten_HeadChief</defName>
    <label>khan</label>
	<aiAvoidCover>true</aiAvoidCover>
	<combatPower>150</combatPower>
    <weaponMoney>20000~20000</weaponMoney>
    <apparelMoney>20000~20000</apparelMoney>
	<weaponTags>
	  <li>GDIRailgun</li>
	  <li>NodChemicalSpray</li>
	  <li>ScrinArtifactWeapon</li>
	</weaponTags>
    <factionLeader>true</factionLeader>
    <itemQuality>Excellent</itemQuality>
	<initialWillRange>16~19</initialWillRange>
	<initialResistanceRange>38~58</initialResistanceRange>
  </PawnKindDef>
  
  <PawnKindDef ParentName="GoodMutantBase">
    <defName>Forgotten_Trader</defName>
    <label>chief trader</label>
	<aiAvoidCover>true</aiAvoidCover>
	<combatPower>100</combatPower>
    <weaponMoney>10000~10000</weaponMoney>
    <apparelMoney>10000~10000</apparelMoney>
	<weaponTags>
	  <li>GDIRailgun</li>	
	  <li>NodChemicalSpray</li>
	</weaponTags>
    <itemQuality>Excellent</itemQuality>
    <trader>true</trader>
    <techHediffsChance>1</techHediffsChance>
    <techHediffsMoney>1000~1500</techHediffsMoney>
    <techHediffsRequired>
      <li>DeathAcidifier</li>
    </techHediffsRequired>
	<biocodeWeaponChance>1</biocodeWeaponChance>
  </PawnKindDef>
  
  <PawnKindDef ParentName="GoodMutantBase">
    <defName>Forgotten_Warrior</defName>
    <label>mutant hijacker</label>
    <combatPower>140</combatPower>
	<isGoodBreacher>true</isGoodBreacher>
	<aiAvoidCover>true</aiAvoidCover>
    <weaponMoney>7500~7500</weaponMoney>
    <apparelMoney>20000~20000</apparelMoney>
	<weaponTags>
	  <li>GDIRailgun</li>	
	  <li>NodChemicalSpray</li>
	</weaponTags>
	<techHediffsChance>0.5</techHediffsChance>
	<techHediffsMoney>1000~1500</techHediffsMoney>
	<techHediffsRequired>
		<li>DeathAcidifier</li>
	</techHediffsRequired>
	<biocodeWeaponChance>0.8</biocodeWeaponChance>
  </PawnKindDef>
  
  <PawnKindDef ParentName="GoodMutantBase">
    <defName>Forgotten_Heavygunner</defName>
    <label>mutant heavygunner</label>
    <combatPower>140</combatPower>
	<aiAvoidCover>true</aiAvoidCover>
    <weaponMoney>7500~7500</weaponMoney>
    <apparelMoney>10000~10000</apparelMoney>
    <weaponTags>
      <li>ShardgunB</li>
    </weaponTags>
  </PawnKindDef>

