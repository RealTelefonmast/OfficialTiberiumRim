		<label>tiberium gas</label>
		<graphicData>
			<graphicClass>Graphic_Single</graphicClass>
			<texPath>VisualFX/Natural/TiberiumGas/TiberiumGasLight</texPath>
			<shaderType>TransparentPostLight</shaderType>
			<drawSize>2.5</drawSize>
		</graphicData>
		<gas>
			<expireSeconds>
				<min>15</min>
				<max>30</max>
