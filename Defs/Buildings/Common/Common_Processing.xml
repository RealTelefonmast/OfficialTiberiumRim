<Defs>

	<TiberiumRim.TRThingDef ParentName="StationBase_TR">
		<defName>NetworkController</defName>
		<label>Tiberium Network Controller</label>
		<description>This structure is the main part of any Tiberium network, it acts as a pump for the entire networks and ensures flow while powered.</description>
		<thingCategories Inherit="false" />
		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<factionDesignation>Common</factionDesignation>
		<TRCategory>Processing</TRCategory>
		<drawerType>MapMeshAndRealTime</drawerType>
		<graphicData>
			<texPath>Buildings/Common/Network/TNC/TNC</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(4.75,4.75)</drawSize>
		</graphicData>
		<statBases>
			<MaxHitPoints>500</MaxHitPoints>
			<WorkToBuild>5000</WorkToBuild>
			<Flammability>1.0</Flammability>
			<Beauty>-10</Beauty>
		</statBases>
		<size>(4,4)</size>
		<costList>
			<Steel>250</Steel>
			<ComponentIndustrial>15</ComponentIndustrial>
		</costList>
		<requisites>
			<tiberiumResearchTasks>
				<li>TiberiumRefining_T5</li>
			</tiberiumResearchTasks>
		</requisites>
		<comps>
			<li Class="TiberiumRim.CompProperties_TNW">
				<compClass>TiberiumRim.CompTNW_TNC</compClass>
			</li>
			<li Class="TiberiumRim.CompProperties_FX"> 
				<overlays>
					<li>
						<data>
							<texPath>Buildings/Common/Network/TNC/TNC_Displays</texPath>
							<graphicClass>Graphic_Single</graphicClass>
							<shaderType>MoteGlow</shaderType>
							<drawSize>(4.75,4.75)</drawSize>
						</data>
						<needsPower>true</needsPower>
					</li>
					<li>
						<data>
							<texPath>Buildings/Common/Network/TNC/TNC_Overlay</texPath>
