<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
	<!-- Obelisk Of Light -->
	<TiberiumRim.TRThingDef ParentName="BuildingBase_TR">
		<defName>ObeliskOfLight</defName>
		<label>obelisk of light</label>
		<description>pew pew</description>
		<thingClass>TiberiumRim.Building_Obelisk</thingClass>
		<factionDesignation>Nod</factionDesignation>
		<TRCategory>Defense</TRCategory>
		<size>(3,3)</size>
		<graphicData>
			<texPath>Buildings/Nod/Defense/Obelisk/Base</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(6,6)</drawSize>
		</graphicData>
		<extraData>
			<rotateDrawSize>true</rotateDrawSize>
			<alignToBottom>true</alignToBottom>
			<drawOffset>(0,0,0.25)</drawOffset>
		</extraData>
		<costList>			
			<Nod_CarbonPlate>100</Nod_CarbonPlate>
			<ComponentIndustrial>12</ComponentIndustrial>
		</costList>
		<uiIconPath>Buildings/Nod/Defense/Obelisk/Icon</uiIconPath>
		<uiIconScale>0.90</uiIconScale>
		<altitudeLayer>BuildingOnTop</altitudeLayer>
		<stealable>false</stealable>
		<rotatable>false</rotatable>
		<statBases>
			<MaxHitPoints>460</MaxHitPoints>
			<Flammability>0.40</Flammability>
			<WorkToBuild>12000</WorkToBuild>
			<Mass>1000</Mass>
			<Beauty>5</Beauty>
		</statBases>
		<tickerType>Normal</tickerType>
		<turret>
			<canForceTarget>true</canForceTarget>
			<turrets>
				<li>
					<graphic>
						<texPath>Buildings/Nod/Defense/Obelisk/ObeliskGun</texPath>
						<graphicClass>Graphic_Single</graphicClass>
						<drawSize>(3,3)</drawSize>
					</graphic>
					<hasTurret>false</hasTurret>
					<turretGunDef>Gun_NodObelisk</turretGunDef>
					<turretBurstWarmupTime>2.35</turretBurstWarmupTime>
					<turretBurstCooldownTime>2</turretBurstCooldownTime>
				</li>
			</turrets>
		</turret>
		<comps>
			<li Class="TiberiumRim.CompProperties_FX"> 
				<overlays>
					<li>
						<data>
							<texPath>Buildings/Nod/Defense/Obelisk/PowerOn</texPath>
							<graphicClass>Graphic_Single</graphicClass>
							<shaderType>MoteGlow</shaderType>
							<drawSize>(6,6)</drawSize>
						</data>
						<needsPower>true</needsPower>
					</li>
					<li>
						<data>
							<texPath>Buildings/Nod/Defense/Obelisk/Charge</texPath>
							<graphicClass>Graphic_Single</graphicClass>
							<shaderType>MoteGlow</shaderType>
							<drawSize>(6,6)</drawSize>
						</data>
						<mode>Dynamic</mode>
					</li>
				</overlays>
			</li>		
			<li Class="CompProperties_Explosive">
			<explosiveRadius>3.9</explosiveRadius>
			<explosiveDamageType>Bomb</explosiveDamageType>
			<chanceNeverExplodeFromDamage>0.5</chanceNeverExplodeFromDamage>
			</li>
			<li Class="CompProperties_Forbiddable"/>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>50</basePowerConsumption>
				<transmitsPower>true</transmitsPower>
			</li>
			<li Class="CompProperties_Flickable"/>
			<li Class="CompProperties_Breakdownable"/>
		</comps>
		<drawOffscreen>true</drawOffscreen>
		<passability>Impassable</passability>
		<fillPercent>0.4</fillPercent>
		<hasTooltip>true</hasTooltip>
		<terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
		<specialDisplayRadius>39.9</specialDisplayRadius>
		<constructionSkillPrerequisite>9</constructionSkillPrerequisite>
		<building>
			<ai_combatDangerous>true</ai_combatDangerous>
		</building>
		<placeWorkers>
			<li>TiberiumRim.PlaceWorker_OnlyOutside</li>
		</placeWorkers>
	</TiberiumRim.TRThingDef>

	<!-- Shredder Turret -->
	<TiberiumRim.TRThingDef ParentName="TurretBase_TR">
		<defName>Nod_ShredderTurret</defName>
		<label>shredder turret</label>
		<description>A Nod shredder turret, useful to control masses.\n\nVulnerable by railgun attack.</description>
		<factionDesignation>Nod</factionDesignation>
		<TRCategory>Defense</TRCategory>
		<thingClass>TiberiumRim.Building_TRTurret</thingClass>
		<size>(2,2)</size>
		<graphicData>
			<texPath>Buildings/Nod/Defense/Turrets/Base</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(2,2)</drawSize>
			<damageData>
				<rect>(0.2,0.2,0.6,0.6)</rect>
			</damageData>
		</graphicData>
		<castEdgeShadows>false</castEdgeShadows>
		<uiIconPath>Buildings/Nod/Defense/Turrets/Shredder</uiIconPath>
		<uiIconScale>1</uiIconScale>
		<altitudeLayer>Building</altitudeLayer>
		<stealable>false</stealable>
		<rotatable>false</rotatable>
		<statBases>
			<MarketValue>5000</MarketValue>
			<MaxHitPoints>350</MaxHitPoints>
			<Flammability>0.5</Flammability>
			<WorkToBuild>5000</WorkToBuild>
			<Mass>5000</Mass>
			<Beauty>-25</Beauty>
			<ShootingAccuracyTurret>0.93</ShootingAccuracyTurret>
		</statBases>
		<tickerType>Normal</tickerType>
		<turret>
			<canForceTarget>true</canForceTarget>
			<turrets>
				<li>
					<graphic>
						<texPath>Buildings/Nod/Defense/Turrets/Shredder_Base</texPath>
						<graphicClass>Graphic_Single</graphicClass>
						<drawSize>(2, 2)</drawSize>
					</graphic>
					<speed>200</speed>
					<turretGunDef>Gun_ShredderTurret</turretGunDef>
					<turretBurstWarmupTime>1.5</turretBurstWarmupTime>
					<turretBurstCooldownTime>1.5</turretBurstCooldownTime>
					<barrelOffset>(0,0,1.5)</barrelOffset>
				</li>
			</turrets>
		</turret>
		<comps>
			<li Class="TiberiumRim.CompProperties_FX"> 
				<overlays>
					<li>
						<data>
							<texPath>Buildings/Nod/Defense/Turrets/Lights</texPath>
							<graphicClass>Graphic_Single</graphicClass>
							<shaderType>MoteGlow</shaderType>
							<drawSize>(2,2)</drawSize>							
						</data>
						<needsPower>true</needsPower>
					</li>
					<li>
						<skip>true</skip>
					</li>
					<li>
						<data>
							<texPath>Buildings/Nod/Defense/Turrets/Shredder_Glow</texPath>
							<graphicClass>Graphic_Single</graphicClass>
							<shaderType>MoteGlow</shaderType>
							<drawSize>(2,2)</drawSize>							
						</data>
						<altitude>Item</altitude>
						<mode>Dynamic</mode>
						<needsPower>true</needsPower>
					</li>
				</overlays>
			</li>	
			<li Class="CompProperties_Explosive">
				<explosiveRadius>1.9</explosiveRadius>
				<explosiveDamageType>Bomb</explosiveDamageType>
				<chanceNeverExplodeFromDamage>0.35</chanceNeverExplodeFromDamage>
			</li>
			<li Class="CompProperties_Forbiddable"/>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>150</basePowerConsumption>
			</li>
			<li Class="CompProperties_Flickable"/>
			<li Class="CompProperties_Breakdownable"/>
			<li Class="CompProperties_Glower">
				<glowRadius>3</glowRadius>
				<glowColor>(255,150,150)</glowColor>
			</li>
			<li Class="CompProperties_Refuelable">
				<fuelLabel>Shells capacity</fuelLabel>
				<fuelGizmoLabel>Shells capacity</fuelGizmoLabel>
				<fuelFilter>
					<thingDefs>
						<li>Nod_CarbonPlate</li>
					</thingDefs>
				</fuelFilter>
				<fuelCapacity>100</fuelCapacity>
				<initialFuelPercent>1</initialFuelPercent>
				<autoRefuelPercent>0.25</autoRefuelPercent>
				<showFuelGizmo>true</showFuelGizmo>
				<minimumFueledThreshold>1</minimumFueledThreshold>
				<atomicFueling>true</atomicFueling>
				<fuelMultiplier>10</fuelMultiplier>
				<factorByDifficulty>true</factorByDifficulty>
				<consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
				<outOfFuelMessage>Cannot shoot: Needs shells charge</outOfFuelMessage>
				<fuelIconPath>UI/Overlays/Barrel</fuelIconPath>
			</li>
		</comps>
		<passability>PassThroughOnly</passability>
		<pathCost>70</pathCost>
		<fillPercent>0.3</fillPercent>
		<hasTooltip>true</hasTooltip>
		<costList>
			<Nod_CarbonPlate>50</Nod_CarbonPlate>
			<ComponentIndustrial>5</ComponentIndustrial>
		</costList>
		<terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
		<specialDisplayRadius>17.9</specialDisplayRadius>
		<building>
			<ai_combatDangerous>true</ai_combatDangerous>
		</building>
		<filthLeaving>Filth_Ash</filthLeaving>
		<placeWorkers>
			<li>TiberiumRim.PlaceWorker_TurretGunTop</li>
		</placeWorkers>
		<damageMultipliers>
			<li>
				<damageDef>TRRailgun</damageDef>
				<multiplier>1.5</multiplier>
			</li>
		</damageMultipliers>
		<constructionSkillPrerequisite>5</constructionSkillPrerequisite>
	</TiberiumRim.TRThingDef>
	
</Defs>