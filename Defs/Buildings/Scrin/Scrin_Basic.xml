<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
	<TiberiumRim.TRThingDef ParentName="BuildingBase_TR">
		<defName>DronePlatform</defName>
		<label>scrin drone platform</label>
		<description>We have arrived.</description>
		<thingClass>TiberiumRim.DronePlatform</thingClass>
		<factionDesignation>Scrin</factionDesignation>
		<TRCategory>Structure</TRCategory>
		<size>(3,3)</size>
		<graphicData>
			<texPath>Buildings/Scrin/DronePlatform/platform</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(4.5,9)</drawSize>
		</graphicData>
		<extraData>
			<rotateDrawSize>false</rotateDrawSize>
			<alignToBottom>false</alignToBottom>
			<drawOffset>(0,0,0.175)</drawOffset>
		</extraData>
		<altitudeLayer>BuildingOnTop</altitudeLayer>
		<stealable>false</stealable>
		<rotatable>false</rotatable>
		<statBases>
			<MaxHitPoints>460</MaxHitPoints>
			<Flammability>0.40</Flammability>
			<WorkToBuild>12000</WorkToBuild>
			<Mass>1000</Mass>
			<Beauty>5</Beauty>
		</statBases>
		<tickerType>Normal</tickerType>
		<drawOffscreen>false</drawOffscreen>
		<passability>Impassable</passability>
		<fillPercent>0.4</fillPercent>
		<hasTooltip>true</hasTooltip>
		<terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
		<specialDisplayRadius>39.9</specialDisplayRadius>
		<makesTerrain>ScrinFloor</makesTerrain>
		<building>
			<ai_combatDangerous>true</ai_combatDangerous>
		</building>
		<placeWorkers>
			<li>TiberiumRim.PlaceWorker_OnlyOutside</li>
		</placeWorkers>
	</TiberiumRim.TRThingDef>

	<TiberiumRim.TRThingDef ParentName="BuildingBase_TR">
		<defName>ScrinPortal</defName>
		<label>portal</label>
		<description>oh lawd they comin</description>
		<thingClass>Building</thingClass>
		<tickerType>Normal</tickerType>
		<factionDesignation>Scrin</factionDesignation>
		<TRCategory>Structure</TRCategory>
		<size>(3,3)</size>
		<graphicData>
			<texPath>Blank</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<comps>
			<li Class="TiberiumRim.CompProperties_FX"> 
				<overlays>
					
					<li>
						<data>
							<texPath>Buildings/Scrin/ScrinPortal</texPath>
							<graphicClass>Graphic_Single</graphicClass>
							<shaderType>MoteGlow</shaderType>
							<drawSize>(4.5,4.5)</drawSize>
						</data>
						<mode>Pulse</mode>
					    <pulse>
							<mode>OpaSize</mode>
							<opacityRange>0.6~1</opacityRange>
							<sizeRange>0.9~1</sizeRange>
						</pulse>
					</li>
					
					<li>
						<data>
							<texPath>Buildings/Scrin/ScrinPortal</texPath>
							<graphicClass>Graphic_Single</graphicClass>
							<shaderType>MoteGlow</shaderType>
							<drawSize>(4.5,4.5)</drawSize>
						</data>
						<mode>Pulse</mode>
						 <pulse>
							<mode>OpaSize</mode>
							<opacityRange>1~0</opacityRange>
							<sizeRange>0.65~1.4</sizeRange>
						</pulse>
					</li>
				</overlays>
			</li>
		</comps>
		<statBases>
			<Mass>50</Mass>
			<Flammability>0</Flammability>
		</statBases>
	</TiberiumRim.TRThingDef>

</Defs>