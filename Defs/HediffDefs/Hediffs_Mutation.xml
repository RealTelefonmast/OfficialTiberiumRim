<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<HediffDef ParentName="HediffBase_TR">
		<defName>TiberiumMutation</defName>
		<hediffClass>TiberiumRim.Hediff_Mutation</hediffClass>
		<label>tiberium mutation</label>
		<defaultLabelColor>(175, 255, 0)</defaultLabelColor>
		<initialSeverity>1</initialSeverity>
		<chanceToCauseNoPain>0.25</chanceToCauseNoPain>
		<makesSickThought>true</makesSickThought>
		<scenarioCanAdd>false</scenarioCanAdd>
		<cureAllAtOnceIfCuredByItem>false</cureAllAtOnceIfCuredByItem>
		<everCurableByItem>false</everCurableByItem>
		<!--<causesNeed></causesNeed>-->
		<stages>
			<li>
				<painFactor>1.5</painFactor>
			</li>
		</stages>
	</HediffDef>

	<!-- Mutation -->
	<HediffDef ParentName="HediffBase_TR">
		<defName>MutationBuff</defName>
		<label>Symbiotic PLACEHOLDER</label>
		<defaultLabelColor>(138, 229, 226)</defaultLabelColor>
		<stages>
		  <li>
			  <capMods>
				<li>
				  <capacity>Manipulation</capacity>
				  <offset>1</offset>
				</li>
				<li>
					<capacity>Moving</capacity>
					<offset>1</offset>
				</li>
				<li>
					<capacity>Consciousness</capacity>
					<offset>0.5</offset>
				</li>
			  </capMods>
		  </li>
	    </stages>
	</HediffDef>
	
	<HediffDef ParentName="HediffBase_TR">
		<defName>MutationDebuff</defName>
		<label>Visceral PLACEHOLDER</label>
		<defaultLabelColor>(140, 156, 50)</defaultLabelColor>
		<stages>
		  <li>
			  <capMods>
				<li>
				  <capacity>Manipulation</capacity>
				  <offset>-0.6</offset>
				</li>
								<li>
					<capacity>Moving</capacity>
					<offset>-0.5</offset>
				</li>
				<li>
					<capacity>Consciousness</capacity>
					<offset>-0.1</offset>
				</li>
				<li>
					<capacity>Sight</capacity>
					<offset>-0.40</offset>
				</li>
				<li>
					<capacity>BloodFiltration</capacity>
					<offset>-0.25</offset>
				</li>
				<li>
					<capacity>Breathing</capacity>
					<offset>-0.1</offset>
				</li>
			  </capMods>
		  </li>
		</stages>
	</HediffDef>
	
	<HediffDef ParentName="HediffBase_TR">
		<defName>TiberiumImmunity</defName>
		<hediffClass>HediffWithComps</hediffClass>
		<label>tiberium immunity</label>
		<labelNoun>tiberium affect immunity</labelNoun>
		<defaultLabelColor>(0, 255, 255)</defaultLabelColor>
	</HediffDef>
	
	<!-- Any Part -->
	<!-- Inside -->
	<HediffDef ParentName="HediffBase_TR">
		<defName>ViscousPart</defName>
		<label>Viscous {0}</label>
		<hediffClass>TiberiumRim.Hediff_LabelledPart</hediffClass>
		<isBad>true</isBad>
		<defaultLabelColor>(155, 160, 75)</defaultLabelColor>
		<stages>
			<li>
				<painFactor>1.05</painFactor>
				<partEfficiencyOffset>-0.75</partEfficiencyOffset>
			</li>
		</stages>
	</HediffDef>
	
	<!-- Outside -->
	<HediffDef ParentName="HediffBase_TR">
		<defName>VisceralBlister</defName>
		<label>blistered part</label>
		<hediffClass>HediffWithComps</hediffClass>
		<defaultLabelColor>(155, 160, 75)</defaultLabelColor>
		<initialSeverity>1</initialSeverity>
		<scenarioCanAdd>false</scenarioCanAdd>
		<tendable>true</tendable>
		<isBad>true</isBad>
		<comps>
			<li Class="HediffCompProperties_TendDuration">
				<baseTendDurationHours>12</baseTendDurationHours>
				<severityPerDayTended>-0.025</severityPerDayTended>
			</li>
		</comps>
		<stages>
			<li>
				<painFactor>1.145</painFactor>
				<partEfficiencyOffset>-0.07</partEfficiencyOffset>
			</li>
		</stages>
	</HediffDef>
	
</Defs>