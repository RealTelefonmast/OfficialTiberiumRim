<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<HediffDef ParentName="HediffInjury_TR">
		<defName>TiberiumBurn</defName>
		<label>tiberium burn</label>
		<labelNoun>a tiberium burn</labelNoun>
		<defaultLabelColor>(255, 255, 100)</defaultLabelColor>
		<comps>
			<li Class="HediffCompProperties_GetsPermanent">
				<permanentLabel>crystal scar</permanentLabel>
			</li>
		</comps>
		<injuryProps>
			<painPerSeverity>0.02</painPerSeverity>
			 <averagePainPerSeverityPermanent>0.08</averagePainPerSeverityPermanent>
			<bleedRate>0</bleedRate>
			<canMerge>true</canMerge>
			<destroyedLabel>Destroyed</destroyedLabel>
			<destroyedOutLabel>Burned out</destroyedOutLabel>
		</injuryProps>
	</HediffDef>

	<TiberiumRim.HediffRelativeDef ParentName="HediffBase_TR">
		<defName>TiberiumExposure</defName>
		<hediffClass>TiberiumRim.Hediff_Relative</hediffClass>
		<label>tiberium exposure</label>
		<defaultLabelColor>(255, 100, 100)</defaultLabelColor>
		<initialSeverity>0.2</initialSeverity>
		<maxSeverity>1</maxSeverity>
		<makesSickThought>true</makesSickThought>
		<everCurableByItem>false</everCurableByItem>
		<makesAlert>false</makesAlert>
		<comps>
			<li Class="HediffCompProperties_Immunizable">
				<severityPerDayNotImmune>-0.05</severityPerDayNotImmune>
			</li>
			<li Class="TiberiumRim.HediffCompProperties_Icon">
				<iconPath>UI/Icons/TiberiumImmune</iconPath>
			</li>
		</comps>
		<relativeCapMods>
			<li>
				<capacity>Metabolism</capacity>
				<offset>-1</offset>
			</li>
			<li>
				<capacity>Breathing</capacity>
				<offset>-0.90</offset>
			</li>
			<li>
				<capacity>Consciousness</capacity>
				<offset>-0.75</offset>
			</li>
			<li>
				<capacity>Moving</capacity>
				<offset>-0.80</offset>
			</li>
		</relativeCapMods>
		<stages>
			<li>
				<minSeverity>0</minSeverity>
				<label>buildup</label>
				<painFactor>1.05</painFactor>
				<hungerRateFactor>1.2</hungerRateFactor>
				<becomeVisible>false</becomeVisible>
			</li>
			<li>
				<minSeverity>0.15</minSeverity>
				<label>slight</label>
				<painFactor>1.2</painFactor>
				<hungerRateFactor>1.5</hungerRateFactor>
			</li>		
			<li>
				<minSeverity>0.45</minSeverity>
				<label>moderate</label>
				<painFactor>1.3</painFactor>
				<hungerRateFactor>2</hungerRateFactor>
				<vomitMtbDays>1</vomitMtbDays>
			</li>
			<li>
				<minSeverity>0.75</minSeverity>
				<label>dangerous</label>
				<painFactor>1.5</painFactor>
				<hungerRateFactor>0.5</hungerRateFactor>
				<vomitMtbDays>0.75</vomitMtbDays>
				<deathMtbDays>5</deathMtbDays>
				<lifeThreatening>true</lifeThreatening>
			</li>
			<li>
				<minSeverity>1</minSeverity>
				<label>lethal</label>
				<painFactor>2</painFactor>
				<hungerRateFactor>0.1</hungerRateFactor>
				<vomitMtbDays>0.5</vomitMtbDays>
				<deathMtbDays>1.5</deathMtbDays>
				<lifeThreatening>true</lifeThreatening>
			</li>
		</stages>
	</TiberiumRim.HediffRelativeDef>
	
	<TiberiumRim.HediffRelativeDef ParentName="HediffBase_TR">
		<defName>PartEfficiencyKiller</defName>
		<label>TEST efficiency killer</label>
		<hediffClass>TiberiumRim.Hediff_Relative</hediffClass>
		<initialSeverity>1</initialSeverity>
		<minSeverity>1</minSeverity>
		<maxSeverity>1</maxSeverity>
		<relativePartEfficiency>-1</relativePartEfficiency>
		<everCurableByItem>false</everCurableByItem>
		<makesAlert>false</makesAlert>
		<stages>
			<li>
				<minSeverity>0</minSeverity>
				<label>no efficiency</label>
			</li>
		</stages>
	</TiberiumRim.HediffRelativeDef>
	
	<HediffDef ParentName="HediffBase_TR">
		<defName>TiberiumCrystallization</defName>
		<label>tiberium infection</label>
		<hediffClass>TiberiumRim.Hediff_Crystallizing</hediffClass>
		<minSeverity>0.001</minSeverity>
		<maxSeverity>1</maxSeverity>
		<everCurableByItem>false</everCurableByItem>
		<makesAlert>false</makesAlert>
		<stages>
			<li>
				<minSeverity>0</minSeverity>
				<label>fusing</label>
				<becomeVisible>false</becomeVisible>
			</li>
			<li>
				<minSeverity>0.01</minSeverity>
				<label>crystallizing</label>
				<painFactor>1.15</painFactor>
			</li>
			<li>
				<minSeverity>0.5</minSeverity>
				<label>crystallizing</label>
				<painFactor>1.6</painFactor>
				<hungerRateFactor>1.75</hungerRateFactor>
				<lifeThreatening>true</lifeThreatening>
			</li>
			<li>
				<minSeverity>1</minSeverity>
				<label>crystallized</label>
				<painFactor>0</painFactor>
				<partEfficiencyOffset>-1</partEfficiencyOffset>
				<hungerRateFactor>2</hungerRateFactor>
				<lifeThreatening>true</lifeThreatening>
			</li>
		</stages>
	</HediffDef>
	
	<HediffDef>
		<defName>CrystallizedPart</defName>
		<label>crystallized part</label>
		<labelNoun>a crystallized part</labelNoun>
		<hediffClass>Hediff_MissingPart</hediffClass>
		<defaultLabelColor>(77, 128, 77)</defaultLabelColor>
		<injuryProps>
			<bleedRate>0</bleedRate>
			<painPerSeverity>0.05</painPerSeverity>
		</injuryProps>
	</HediffDef>
	
</Defs>