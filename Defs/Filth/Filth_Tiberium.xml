<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
	<ThingDef Name="TibFilth" ParentName="BaseFilth" Abstract="True">
		<statBases>
			<Beauty>-5</Beauty>
			<Cleanliness>-25</Cleanliness>
		</statBases>
		<graphicData>	
			<color>(1, 1, 1, 0.5)</color>
			<shaderType>MoteGlow</shaderType>
		</graphicData>
		<filth>
			<cleaningWorkToReduceThickness>65</cleaningWorkToReduceThickness>
			<canFilthAttach>true</canFilthAttach>
			<rainWashes>true</rainWashes>
			<maxThickness>5</maxThickness>
			<disappearsInDays>1~5</disappearsInDays>
			<cleaningSound>Interact_CleanFilth_Fluid</cleaningSound>
		</filth>
	</ThingDef>

	<ThingDef ParentName="TibFilth">
