<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="PlantBase_TR">
		<defName>TiberiumGrass</defName>
		<label>tiberium grass</label>
		<description>A strange type of grass-like flora, don't get entangled in the tentacles!</description>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<Beauty>-12</Beauty>
			<Flammability>0</Flammability>
		</statBases>
		<graphicData>
			<texPath>Tiberium/Flora/Grass/Green</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<plant>
			<harvestedThingDef>TiberiumPlantGrass</harvestedThingDef>
			<harvestYield>6</harvestYield>
			<growDays>2.5</growDays>
		</plant>
	</ThingDef>
	
