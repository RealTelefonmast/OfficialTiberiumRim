	<ThingDef ParentName="PlantBase_TR">
		<defName>TiberiumBush</defName>
		<label>tiberium bush</label>
		<description>A bunch of Tiberium flora forming a bush.</description>
		<statBases>
			<MaxHitPoints>120</MaxHitPoints>
			<Beauty>-16</Beauty>
		</statBases>
		<graphicData>
			<texPath>Tiberium/Flora/Bush</texPath>
			<graphicClass>Graphic_Random</graphicClass>
			<shadowData>
				<volume>(0.55, 0.2, 0.2)</volume>
			</shadowData>
		</graphicData>
		<plant>
			<harvestedThingDef>TiberiumPlantBerry</harvestedThingDef>
			<harvestYield>6</harvestYield>
			<growDays>3</growDays>
			<wildClusterRadius>4</wildClusterRadius>
		</plant>
	</ThingDef>
  
	<ThingDef Abstract="True" Name="ShroomBase" ParentName="PlantBase_TR">
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<Beauty>-10</Beauty>
			<Flammability>0</Flammability>
		</statBases>
		<plant>
			<harvestedThingDef>TiberiumPlantShroom</harvestedThingDef>
			<harvestYield>6</harvestYield>
			<growDays>2.5</growDays>
			<visualSizeRange>
				<min>0.8</min>
				<max>1.8</max>
			</visualSizeRange>
			<wildClusterRadius>4</wildClusterRadius>
		</plant>
	</ThingDef>
  
	<ThingDef ParentName="ShroomBase">
		<defName>TiberiumShroom_Yellow</defName>
		<label>yellow tiberium mushroom</label>
		<description>This glowy plant resembles a mushroom, strange what Tiberium radiation can create.</description>
		<graphicData>
			<texPath>Tiberium/Flora/Shroom/yello</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<comps>
			<li Class="CompProperties_Glower">
				<glowRadius>3</glowRadius>
				<glowColor>(70,110,0,0)</glowColor>
			</li>
		</comps>
	</ThingDef>

