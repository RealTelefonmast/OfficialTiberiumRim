	<!-- Expeller, does the expelling -->
	
	<ThingDef ParentName="PlantBase_TR">
		<defName>TiberiumExpeller</defName>
		<label>tiberian vent</label>
		<description>!</description>
		<statBases>
			<MaxHitPoints>130</MaxHitPoints>
			<Beauty>-18</Beauty>
			<Flammability>0</Flammability>
		</statBases>
		<graphicData>
			<texPath>Tiberium/Flora/Expeller</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<plant>
			<growDays>3</growDays>
		</plant>
	</ThingDef>
	
	<ThingDef ParentName="PlantBase_TR">
		<defName>TiberiumTree</defName>
		<label>tiberium tree</label>
		<description>A Tiberium infested tree, seems to be mostly harmless.</description>
		<altitudeLayer>Building</altitudeLayer>
		<graphicData>
			<texPath>Tiberium/Flora/Tree</texPath>
			<graphicClass>Graphic_Random</graphicClass>
			<shadowData>
				<volume>(0.24, 0.4, 0.13)</volume>
				<offset>(-0.03,0,-0.44)</offset>
			</shadowData>
		</graphicData>
		<statBases>
			<MaxHitPoints>250</MaxHitPoints>
			<Beauty>-16</Beauty>
		</statBases>
		<plant>
			<soundHarvesting>Harvest_Tree</soundHarvesting>
			<soundHarvestFinish>Harvest_Tree_Finish</soundHarvestFinish>
			<harvestedThingDef>TiberiumPlantTree</harvestedThingDef>
			<harvestYield>5</harvestYield>
			<growDays>12</growDays>
			<visualSizeRange>
				<min>1.5</min>
				<max>2.5</max>
			</visualSizeRange>
			<maxMeshCount>1</maxMeshCount>
		</plant>
	</ThingDef>

