	<ThingDef Name="HatBase_TR" ParentName="ApparelBase_TR" Abstract="True">
		<thingCategories>
			<li>Headgear</li>
		</thingCategories>
	</ThingDef>

	<ThingDef Name="HatMakeableBase_TR" ParentName="ApparelMakeableBase_TR" Abstract="True">
		<thingCategories>
			<li>Headgear</li>
		</thingCategories>
	</ThingDef>

</Defs>