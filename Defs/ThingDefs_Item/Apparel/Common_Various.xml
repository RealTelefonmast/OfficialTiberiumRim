<?xml version="1.0" encoding="utf-8" ?>
<Defs>


  
	<TiberiumRim.TRThingDef ParentName="ApparelUniqueMakeableBase_TR"> <!--balance standard - flak jacket-->
		<defName>TiberiumSuit</defName>
		<description>With this suit you can savely traverse any Tiberium infested terrain. It shields the wearer from getting infected by Tiberium and also any possible radiation.  A suit to protect from Tiberium.\n\n Also protects from toxic fallout.</description>
		<label>Tiberium protection suit</label>
		<graphicData>
			<texPath>Items/Apparel/TiberiumProtectionSuit/TiberiumSuit</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<requisites>
			<tiberiumResearchTasks>
				<li>TiberiumProtection_T1</li>
			</tiberiumResearchTasks>
		</requisites>
		<costList>
			<Cloth>75</Cloth>
			<Steel>25</Steel>
			<ComponentIndustrial>2</ComponentIndustrial>
		</costList>
		<recipeMaker>
			<recipeUsers Inherit="false">
				<li>TiberiumWorkbench</li>
			</recipeUsers>
		</recipeMaker>
		<thingCategories>
			<li>Apparel</li>
		</thingCategories>
		<statBases> 
			<MaxHitPoints>200</MaxHitPoints>
			<WorkToMake>15000</WorkToMake>
			<Mass>8</Mass>
			<ArmorRating_Sharp>0.2</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.1</ArmorRating_Blunt>
			<ArmorRating_Heat>0.1</ArmorRating_Heat>
			<Insulation_Cold>10</Insulation_Cold>
			<Insulation_Heat>10</Insulation_Heat>
			<EquipDelay>15</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<MoveSpeed>-0.1</MoveSpeed>
			<ToxicSensitivity>-0.6</ToxicSensitivity>
			<TiberiumInfectionResistance>1.2</TiberiumInfectionResistance>
			<TiberiumRadiationResistance>0.8</TiberiumRadiationResistance>
		</equippedStatOffsets>
		<skillRequirements>
			<Crafting>7</Crafting>
		</skillRequirements>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Legs</li>
				<li>Hands</li>
				<li>Feet</li>
			</bodyPartGroups>
			<wornGraphicPath>Items/Apparel/TiberiumProtectionSuit/TiberiumSuit</wornGraphicPath>
			<layers>
			    <li>Middle</li>
				<li>Shell</li>
			</layers>
			<defaultOutfitTags>
				<li>TiberiumProtection</li>
				<li>Worker</li>
			</defaultOutfitTags>
		</apparel>
	</TiberiumRim.TRThingDef>
	
