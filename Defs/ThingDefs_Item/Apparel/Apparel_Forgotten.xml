			    <li>OnSkin</li>
			</layers>
			<tags>
				<li>ForgottenSet</li>
			</tags>
			<defaultOutfitTags>
				<li>ForgottenSet</li>
			</defaultOutfitTags>
			<useDeflectMetalEffect>true</useDeflectMetalEffect>
		</apparel>
