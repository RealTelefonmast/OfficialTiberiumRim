<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	
	<ThingDef ParentName="HarvesterBase">
		<defName>Harvester_Common</defName>
		<label>Harvester</label>	
		<description>A standart Tiberium harvester, it will seek out the closest most valuable Tiberium of any type unless told to do otherwise.</description>
		<comps>
			<li Class="TiberiumRim.CompProperties_FX"> 		
				<overlays>
					<li>
						<data>
							<texPath>Pawns/Common/Harvester/FX/HC</texPath>
							<graphicClass>Graphic_Multi</graphicClass>
							<shaderType>MoteGlow</shaderType>
							<drawSize>(3,3)</drawSize>
						</data>
						<mode>Dynamic</mode>
					</li>
				</overlays>			
			</li>
		</comps>
		<statBases>
			<MoveSpeed>1.33</MoveSpeed>
			<ArmorRating_Blunt>0.2</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.7</ArmorRating_Sharp>
		</statBases>
	</ThingDef>
	
	<TiberiumRim.FXThingDef ParentName="BuildingBase_TR">
		<defName>HarvesterHusk_Common</defName>
		<label>Harvester husk</label>
		<description>The remains of a destroyed harvester.</description>
		<altitudeLayer>Building</altitudeLayer>
		<graphicData>
			<texPath>Pawns/Common/Harvester/HarvesterCommon_Destroyed</texPath>
			<drawRotated>false</drawRotated>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(3,3)</drawSize>
		</graphicData>
		<statBases>
			<MaxHitPoints>250</MaxHitPoints>
			<Beauty>-26</Beauty>
			<TiberiumDamageResistance>1</TiberiumDamageResistance>
		</statBases>
		<costList>
			<Steel>75</Steel>
			<ComponentIndustrial>2</ComponentIndustrial>
		</costList>
		<randomizeRotationOnSpawn>true</randomizeRotationOnSpawn>
		<rotatable>true</rotatable>
		<destroyable>true</destroyable>
		<useHitPoints>true</useHitPoints>
		<tickerType>Normal</tickerType>
		<selectable>true</selectable>
		<size>(1,1)</size>
		<neverOverlapFloors>false</neverOverlapFloors>
		<blockPlants>true</blockPlants>
		<building>
			<isEdifice>false</isEdifice>
			<claimable>false</claimable>
			<deconstructible>true</deconstructible>
		</building>		
	</TiberiumRim.FXThingDef>

</Defs>
