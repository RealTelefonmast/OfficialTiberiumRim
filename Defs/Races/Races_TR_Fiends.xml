<Defs>

	<ThingDef ParentName="FiendBase">
		<defName>TiberiumFiend</defName>
		<label>tiberium fiend</label>
		<description>A classic Tiberium predator. The Tiberium Fiend is the most common and rather dangerous Tiberium creature. They are tameable, but only accept those worthy of their trust.</description>
		<statBases>
			<MoveSpeed>7</MoveSpeed>
			<ComfyTemperatureMin>-70</ComfyTemperatureMin>
			<MarketValue>750</MarketValue>
			<Mass>50</Mass>
			<MeatAmount>50</MeatAmount>
			<PainShockThreshold>1</PainShockThreshold>
		</statBases>
		<tools>
			<li>
				<label>left claw</label>
				<capacities>
					<li>Scratch</li>
				</capacities>
				<power>16</power>
				<cooldownTime>1.65</cooldownTime>
				<linkedBodyPartsGroup>FrontLeftPaw</linkedBodyPartsGroup>
				<surpriseAttack>
					<extraMeleeDamages>
						<li>
							<def>Stun</def>
							<amount>20</amount>
						</li>
					</extraMeleeDamages>
				</surpriseAttack>
				<chanceFactor>0.5</chanceFactor>
			</li>
			<li>
				<label>right claw</label>
				<capacities>
					<li>Scratch</li>
				</capacities>
				<power>16</power>
				<cooldownTime>1.65</cooldownTime>
				<linkedBodyPartsGroup>FrontRightPaw</linkedBodyPartsGroup>
				<surpriseAttack>
					<extraMeleeDamages>
						<li>
							<def>Stun</def>
							<amount>20</amount>
						</li>
					</extraMeleeDamages>
				</surpriseAttack>
				<chanceFactor>0.5</chanceFactor>
			</li>
			<li>
				<capacities>
					<li>Bite</li>
				</capacities>
				<power>22</power>
				<cooldownTime>2.5</cooldownTime>
				<linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
				<surpriseAttack>
				<extraMeleeDamages>
					<li>
						<def>Stun</def>
						<amount>25</amount>
					</li>
				</extraMeleeDamages>
				</surpriseAttack>
				<chanceFactor>0.9</chanceFactor>
			</li>
			<li>
				<label>head</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>10</power>
				<cooldownTime>2</cooldownTime>
				<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
				<ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
				<chanceFactor>0.2</chanceFactor>
			</li>
		</tools>
		<race>
			<body>QuadrupedAnimalWithPawsAndTail</body>
			<maxPreyBodySize>2.3</maxPreyBodySize>
			<petness>0.1</petness>
			<baseBodySize>0.85</baseBodySize>
			<baseHungerRate>0.18</baseHungerRate>
			<baseHealthScale>1.75</baseHealthScale>
			<foodType>CarnivoreAnimal</foodType>
			<nameOnTameChance>1</nameOnTameChance>
			<trainability>Advanced</trainability>
			<wildness>0.85</wildness>
			<nuzzleMtbHours>640</nuzzleMtbHours>
			<manhunterOnTameFailChance>1</manhunterOnTameFailChance>
			<manhunterOnDamageChance>0.3</manhunterOnDamageChance>
			<gestationPeriodDays>26</gestationPeriodDays>
			<litterSizeCurve>
				<points>
					<li>(0.5, 0)</li>
					<li>(1, 1)</li>
					<li>(2, 1.7)</li>
					<li>(2.5, 0.7)</li>
					<li>(3, 0)</li>
				</points>
			</litterSizeCurve>
			<lifeExpectancy>10</lifeExpectancy>
			<lifeStageAges>
				<li>
					<def>AnimalBaby</def>
					<minAge>0</minAge>
				</li>
				<li>
					<def>AnimalJuvenile</def>
					<minAge>0.2</minAge>
				</li>
				<li>
					<def>AnimalAdult</def>
					<minAge>0.45</minAge>
					<soundWounded>Pawn_Dog_Injured</soundWounded>
					<soundDeath>Pawn_Dog_Death</soundDeath>
					<soundCall>Pawn_Dog_Call</soundCall>
					<soundAngry>Pawn_Dog_Angry</soundAngry>
				</li>
			</lifeStageAges>
			<soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
			<soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
			<soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
		</race>
	</ThingDef>

