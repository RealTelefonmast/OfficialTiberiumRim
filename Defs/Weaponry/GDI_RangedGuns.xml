					<canTargetLocations>true</canTargetLocations>
				</targetParams>
			</li>
		</verbs>
		<tools>
		  <li>
			<label>stock</label>
			<capacities>
			  <li>Blunt</li>
			</capacities>
			<power>7</power>
			<cooldownTime>1.8</cooldownTime>
		  </li>
		  <li>
			<label>barrel</label>
			<capacities>
