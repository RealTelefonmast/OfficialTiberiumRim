<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<TiberiumRim.TRThingDef Name="GDI_Gun" ParentName="BaseGunWithQuality_TR" Abstract="True">
		<soundInteract>Interact_Rifle</soundInteract>
		<requisites>
			<tiberiumResearch>
				<li>GDIExperimental</li>
			</tiberiumResearch>
		</requisites>
		<recipeMaker>
			<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
			<workSkill>Crafting</workSkill>
			<effectWorking>Smith</effectWorking>
			<soundWorking>Recipe_Smith</soundWorking>
			<recipeUsers>
				<li>GDI_Factory</li>
			</recipeUsers>
			<unfinishedThingDef>UnfinishedGun</unfinishedThingDef>
			<researchPrerequisite>Gunsmithing</researchPrerequisite>
			<skillRequirements>
				<Crafting>5</Crafting>
			</skillRequirements>
		</recipeMaker>
		<weaponTags>
			<li>GDI_Gun</li>
		</weaponTags>
	</TiberiumRim.TRThingDef>	

	<TiberiumRim.TRThingDef ParentName="GDI_Gun">
		<defName>GDI_StandardRifle</defName>
		<label>GDI rifle</label>
		<description>A general-purpose military weapon for field or urban combat.\n\nUpgradable to GDI railgun.</description>
		<graphicData>
			<texPath>Items/Weapons/GDI/Rifle</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<!--
		<requisites>
			<tiberiumResearchTasks>
				<li>BasicArsenal_T1</li>
			</tiberiumResearchTasks>
		</requisites>
		-->
		<statBases>
			<WorkToMake>35000</WorkToMake>
			<Mass>5.5</Mass>
			<AccuracyTouch>0.3</AccuracyTouch>
			<AccuracyShort>0.65</AccuracyShort>
			<AccuracyMedium>0.7</AccuracyMedium>
			<AccuracyLong>0.75</AccuracyLong>
			<RangedWeapon_Cooldown>2</RangedWeapon_Cooldown>
		</statBases>
		<costList>
			<Steel>120</Steel>
			<ComponentIndustrial>8</ComponentIndustrial>
		</costList>
		<verbs>
			<li Class="TiberiumRim.VerbProperties_TR">
				<verbClass>TiberiumRim.Verb_TR</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Bullet_GDIStandard</defaultProjectile>
				<secondaryProjectile>Bullet_GDIHighVelocity</secondaryProjectile>
				<warmupTime>1.5</warmupTime>
				<range>36.9</range>
				<burstShotCount>4</burstShotCount>
				<ticksBetweenBurstShots>16</ticksBetweenBurstShots>
				<soundCast>Shot_AssaultRifle</soundCast>
				<soundCastTail>GunTail_Heavy</soundCastTail>
				<muzzleFlashScale>9</muzzleFlashScale>
			</li>
		</verbs>
		<tools>
		  <li>
			<label>stock</label>
			<capacities>
			  <li>Blunt</li>
			</capacities>
			<power>16</power>
			<cooldownTime>2.5</cooldownTime>
		  </li>
		  <li>
			<label>barrel</label>
			<capacities>
			  <li>Blunt</li>
			  <li>Poke</li>
			</capacities>
			<power>9</power>
			<cooldownTime>2</cooldownTime>
		  </li>
		</tools>
		<weaponTags>
			<li>GDIRifle</li>
		</weaponTags>
	</TiberiumRim.TRThingDef>
	
	<!-- Allow multi ammo type -->
	<TiberiumRim.TRThingDef ParentName="GDI_Gun">
		<defName>GDI_StunLauncher</defName>
		<label>GDI stun grenade launcher</label>
		<description>A classic grenade launcher, equipped with stun grenades.</description>
		<graphicData>
			<texPath>Items/Weapons/GDI/DiscThrower</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>1.25</drawSize>
		</graphicData>
		<soundInteract>Interact_Rifle</soundInteract>
		<statBases>
			<WorkToMake>37000</WorkToMake>
			<Mass>4.0</Mass>
			<AccuracyTouch>0.75</AccuracyTouch>
			<AccuracyShort>0.75</AccuracyShort>
			<AccuracyMedium>0.75</AccuracyMedium>
			<AccuracyLong>0.75</AccuracyLong>
			<RangedWeapon_Cooldown>2.25</RangedWeapon_Cooldown>
		</statBases>
		<costList>
			<GDI_ReinforcedPlate>20</GDI_ReinforcedPlate>
			<ComponentIndustrial>5</ComponentIndustrial>
		</costList>
		<verbs>
			<li>
				<verbClass>Verb_LaunchProjectile</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Projectile_StunGrenade</defaultProjectile>
				<warmupTime>2</warmupTime>
				<range>24.9</range>
				<minRange>1.5</minRange>
				<forcedMissRadius>0.1</forcedMissRadius>
				<burstShotCount>1</burstShotCount>
				<soundCast>Interact_AssaultRifle</soundCast>
				<soundCastTail>Shot_GDI_GunTail</soundCastTail>
				<muzzleFlashScale>5</muzzleFlashScale>
				<targetParams>
					<canTargetLocations>true</canTargetLocations>
				</targetParams>
			</li>
		</verbs>
		<tools>
		  <li>
			<label>stock</label>
			<capacities>
			  <li>Blunt</li>
			</capacities>
			<power>7</power>
			<cooldownTime>1.8</cooldownTime>
		  </li>
		  <li>
			<label>barrel</label>
			<capacities>
			  <li>Blunt</li>
			  <li>Poke</li>
			</capacities>
			<power>7.7</power>
			<cooldownTime>1.9</cooldownTime>
		  </li>
		</tools>
		<weaponTags>
			<li>GDIRifle</li>
		</weaponTags>
	</TiberiumRim.TRThingDef>

	<TiberiumRim.TRThingDef ParentName="GDI_Gun">
		<defName>GDI_Railgun</defName>
		<label>GDI railgun</label>
		<description>This railgun fires accurate supersonic sabots. Made to be used in conjunction with the GDI Zone Trooper armor.</description>
		<graphicData>
			<texPath>Items/Weapons/GDI/Railgun</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>1.25</drawSize>
		</graphicData>
		<soundInteract>Interact_Rifle</soundInteract>
		<statBases>
			<WorkToMake>52000</WorkToMake>
			<Mass>15.5</Mass>
			<AccuracyTouch>0.25</AccuracyTouch>
			<AccuracyShort>0.65</AccuracyShort>
			<AccuracyMedium>0.9</AccuracyMedium>
			<AccuracyLong>1</AccuracyLong>
			<RangedWeapon_Cooldown>1.5</RangedWeapon_Cooldown>
		</statBases>
		<conditionalStatOffsets>
			<li>
				<unequippedOffsets>
					<MoveSpeed>-0.40</MoveSpeed>
				</unequippedOffsets>
				<requiredEquip>
					<li>Apparel_GDIZoneSuit</li>
				</requiredEquip>
			</li>
		</conditionalStatOffsets>
		<costList>
			<GDI_StandardRifle>1</GDI_StandardRifle>
			<ComponentIndustrial>15</ComponentIndustrial>
			<TRBattleChip>2</TRBattleChip>
		</costList>
		<verbs>
			<li Class="TiberiumRim.VerbProperties_TR">
				<verbClass>TiberiumRim.Verb_Beam</verbClass>
				<beamProps>
					<damageDef>TRRailgun</damageDef>
					<beamPath>Items/Weapons/Projectile/Bullet_Railshot</beamPath>
					<hitEffecter>RailgunHit</hitEffecter>
				</beamProps>
				<originOffsets>	
					<li>(0, 0, 0.7)</li>
				</originOffsets>
				<hasStandardCommand>true</hasStandardCommand>
				<requireLineOfSight>true</requireLineOfSight>
				<warmupTime>2</warmupTime>
				<range>48.9</range>
				<burstShotCount>1</burstShotCount>
				<ticksBetweenBurstShots>0</ticksBetweenBurstShots>
				<soundCast>Shot_GDI_Railgun</soundCast>
				<soundCastTail>Shot_GDI_GunTail</soundCastTail>
				<muzzleFlashScale>10</muzzleFlashScale>
				<ai_IsBuildingDestroyer>true</ai_IsBuildingDestroyer>
			</li>
		</verbs>
		<tools>
		  <li>
			<label>stock</label>
			<capacities>
			  <li>Blunt</li>
			</capacities>
			<power>10</power>
			<cooldownTime>2</cooldownTime>
		  </li>
		  <li>
			<label>barrel</label>
			<capacities>
			  <li>Blunt</li>
			  <li>Poke</li>
			</capacities>
			<power>10</power>
			<cooldownTime>2</cooldownTime>
		  </li>
		</tools>
		<weaponTags>
			<li>GDIRailgun</li>
		</weaponTags>
		<recipeMaker>
			<skillRequirements>
				<Crafting>10</Crafting>
			</skillRequirements>
		</recipeMaker>
	</TiberiumRim.TRThingDef>
	
	<TiberiumRim.TRThingDef ParentName="GDI_Gun">
		<defName>GDI_Shatterer</defName>
		<label>GDI sonic shatterer</label>
		<description>This weapon uses GDI's sonic technology. Extremely unstable.</description>
		<graphicData>
			<texPath>Items/Weapons/GDI/GDI_Shatterer</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>1.25</drawSize>
		</graphicData>
		<soundInteract>Interact_Rifle</soundInteract>
		<statBases>
			<WorkToMake>70000</WorkToMake>
			<Mass>10.0</Mass>
			<AccuracyTouch>0.85</AccuracyTouch>
			<AccuracyShort>1</AccuracyShort>
			<AccuracyMedium>0.80</AccuracyMedium>
			<AccuracyLong>0.6</AccuracyLong>
			<RangedWeapon_Cooldown>2.5</RangedWeapon_Cooldown>
		</statBases>
		<conditionalStatOffsets>
			<li>
				<unequippedOffsets>
					<MoveSpeed>-0.40</MoveSpeed>
				</unequippedOffsets>
				<requiredEquip>
					<li>Apparel_GDIZoneSuit</li>
				</requiredEquip>
			</li>
		</conditionalStatOffsets>
		<costList>
			<GDI_ReinforcedPlate>25</GDI_ReinforcedPlate>
			<ComponentIndustrial>10</ComponentIndustrial>
			<GDI_SonicCore>1</GDI_SonicCore>
			<TRBattleChip>2</TRBattleChip>
		</costList>
		<verbs>
			<li Class="TiberiumRim.VerbProperties_TR">
				<verbClass>TiberiumRim.Verb_BurstToTarget</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Projectile_SonicWave</defaultProjectile>
				<requireLineOfSight>true</requireLineOfSight>
				<warmupTime>3</warmupTime>
				<range>25</range>
				<minRange>1.9</minRange>
				<burstShotCount>2</burstShotCount>
				<forcedMissRadius>1</forcedMissRadius>
				<soundCast>Shot_GDI_Sonic</soundCast>
				<soundCastTail>Shot_GDI_GunTail</soundCastTail>
				<targetParams>
					<canTargetLocations>true</canTargetLocations>
				</targetParams>
				<muzzleFlashScale>15</muzzleFlashScale>
				<ai_AvoidFriendlyFireRadius>3</ai_AvoidFriendlyFireRadius>
				<ai_IsBuildingDestroyer>true</ai_IsBuildingDestroyer>
			</li>
		</verbs>
		<tools>
		  <li>
			<label>stock</label>
			<capacities>
			  <li>Blunt</li>
			</capacities>
			<power>7</power>
			<cooldownTime>1.8</cooldownTime>
		  </li>
		  <li>
			<label>barrel</label>
			<capacities>
			  <li>Blunt</li>
			  <li>Poke</li>
			</capacities>
			<power>7.7</power>
			<cooldownTime>1.9</cooldownTime>
		  </li>
		</tools>
		<weaponTags>
			<li>GDIShatterer</li>
		</weaponTags>
		<recipeMaker>
			<skillRequirements>
				<Crafting>10</Crafting>
			</skillRequirements>
		</recipeMaker>
	</TiberiumRim.TRThingDef>
	
	<TiberiumRim.TRThingDef ParentName="GDI_Gun">
		<defName>GDI_Mortar</defName>
		<label>GDI mobile mortar</label>
		<description>This is a experimental weapon used by GDI for long distance engagements.\n\nUpgradable to GDI shockweaver.</description>
		<graphicData>
			<texPath>Items/Weapons/GDI/MobileMortar</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>1.5</drawSize>
		</graphicData>
		<soundInteract>Interact_Rifle</soundInteract>
		<statBases>
			<WorkToMake>50000</WorkToMake>
			<Mass>10.0</Mass>
			<AccuracyTouch>0.3</AccuracyTouch>
			<AccuracyShort>0.4</AccuracyShort>
			<AccuracyMedium>0.5</AccuracyMedium>
			<AccuracyLong>0.6</AccuracyLong>
			<RangedWeapon_Cooldown>6</RangedWeapon_Cooldown>
		</statBases>
		<costList>
			<GDI_ReinforcedPlate>35</GDI_ReinforcedPlate>
			<ComponentIndustrial>15</ComponentIndustrial>
		</costList>
		<verbs>
			<li>
				<verbClass>Verb_LaunchProjectile</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Bullet_Mortar</defaultProjectile>
				<warmupTime>5</warmupTime>
				<requireLineOfSight>false</requireLineOfSight>
				<range>49.9</range>
				<minRange>25</minRange>
				<forcedMissRadius>5</forcedMissRadius>
