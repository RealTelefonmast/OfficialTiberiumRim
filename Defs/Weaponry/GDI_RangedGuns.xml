		<weaponTags>
			<li>GDIMobileMortar</li>
		</weaponTags>
		<equippedStatOffsets>
			<MoveSpeed>-0.15</MoveSpeed>
		</equippedStatOffsets>
		<recipeMaker>
			<skillRequirements>
				<Crafting>8</Crafting>
			</skillRequirements>
		</recipeMaker>
	</TiberiumRim.TRThingDef>

