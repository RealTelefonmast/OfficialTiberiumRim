		<graphicData>
			<texPath>Items/Weapons/GDI/Rifle</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<!--
		<requisites>
			<tiberiumResearchTasks>
				<li>BasicArsenal_T1</li>
			</tiberiumResearchTasks>
		</requisites>
		-->
