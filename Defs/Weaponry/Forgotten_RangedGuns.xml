<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<TiberiumRim.TRThingDef ParentName="BaseMakeableGun_TR">
		<defName>Forg_ShardgunGreen</defName>
		<label>shard gun</label>
		<description>A simple shotgun made from scrap and other components. Launches crushed tiberium crystals towards the target, may accidentally seed the ground with green tiberium.\n\nUpgradable to the explosive shard launcher.</description>
		<graphicData>
			<texPath>Items/Weapons/Forgotten/TibShardgun</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>1.25</drawSize>
		</graphicData>
		<statBases>
			<WorkToMake>15000</WorkToMake>
			<Mass>3</Mass>
			<AccuracyTouch>0.7</AccuracyTouch>
			<AccuracyShort>0.6</AccuracyShort>
			<AccuracyMedium>0.4</AccuracyMedium>
			<AccuracyLong>0.3</AccuracyLong>
			<RangedWeapon_Cooldown>2</RangedWeapon_Cooldown>
		</statBases>
		<costList>
			<Steel>75</Steel>
			<ComponentIndustrial>3</ComponentIndustrial>
		</costList>
		<techLevel>Industrial</techLevel>
		<weaponTags>
			<li>Shardgun</li>
		</weaponTags>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Bullet_Shard</defaultProjectile>
				<warmupTime>2</warmupTime>
				<range>14.9</range>
				<forcedMissRadius>0.1</forcedMissRadius>
				<burstShotCount>3</burstShotCount>
				<ticksBetweenBurstShots>0</ticksBetweenBurstShots>
				<soundCast>Shot_Nod_Shredder</soundCast>
				<soundCastTail>Shot_Nod_GunTail</soundCastTail>
				<muzzleFlashScale>14</muzzleFlashScale>
			</li>
		</verbs>
		<tools>
		  <li>
			<label>stock</label>
			<capacities>
			  <li>Blunt</li>
			</capacities>
			<power>7</power>
			<cooldownTime>1.8</cooldownTime>
		  </li>
		  <li>
			<label>barrel</label>
			<capacities>
			  <li>Blunt</li>
			  <li>Poke</li>
			</capacities>
			<power>7.7</power>
			<cooldownTime>1.9</cooldownTime>
		  </li>
		</tools>
		<weaponClasses>
			<li>RangedHeavy</li>
			<li>ShortShots</li>
		</weaponClasses>
		<requisites>
			<tiberiumResearch>
				<li>ForgottenExperimental1</li>
			</tiberiumResearch>
		</requisites>
	</TiberiumRim.TRThingDef>
	
