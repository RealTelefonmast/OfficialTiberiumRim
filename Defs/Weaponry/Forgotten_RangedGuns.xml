<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<TiberiumRim.TRThingDef Name="Forg_Gun" ParentName="BaseGunWithQuality_TR" Abstract="True">
		<soundInteract>Interact_Rifle</soundInteract>
		<recipeMaker>
			<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
			<workSkill>Crafting</workSkill>
			<effectWorking>Smith</effectWorking>
			<soundWorking>Recipe_Smith</soundWorking>
			<recipeUsers>
				<li>TiberiumWorkbench</li>
			</recipeUsers>
			<unfinishedThingDef>UnfinishedGun</unfinishedThingDef>
			<researchPrerequisite>Gunsmithing</researchPrerequisite>
			<skillRequirements>
				<Crafting>5</Crafting>
			</skillRequirements>
		</recipeMaker>
		<weaponTags>
			<li>Forg_Gun</li>
		</weaponTags>
	</TiberiumRim.TRThingDef>	

	<TiberiumRim.TRThingDef ParentName="Forg_Gun">
		<defName>Forg_ShardgunGreen</defName>
		<label>shard gun</label>
		<description>A simple shotgun made from scrap and other components. Launches crushed tiberium crystals towards the target, may accidentally seed the ground with green tiberium.\n\nUpgradable to the explosive shard launcher.</description>
		<graphicData>
			<texPath>Items/Weapons/Forgotten/TibShardgun_A</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>1.5</drawSize>
		</graphicData>
		<statBases>
			<WorkToMake>25000</WorkToMake>
			<Mass>5</Mass>
			<AccuracyTouch>0.7</AccuracyTouch>
			<AccuracyShort>0.6</AccuracyShort>
			<AccuracyMedium>0.4</AccuracyMedium>
			<AccuracyLong>0.3</AccuracyLong>
			<RangedWeapon_Cooldown>2</RangedWeapon_Cooldown>
		</statBases>
		<costList>
			<Steel>75</Steel>
			<ComponentIndustrial>5</ComponentIndustrial>
		</costList>
		<techLevel>Industrial</techLevel>
		<weaponTags>
			<li>Shardgun</li>
		</weaponTags>
		<verbs>
			<li Class="TiberiumRim.VerbProperties_TR">
				<verbClass>TiberiumRim.Verb_TR</verbClass>
				<originOffsets>
					<li>(0, 0, 1.3)</li>
				</originOffsets>
				<muzzleFlash>
					<flashGraphicData>
						<graphicClass>Graphic_Random</graphicClass>
						<shaderType>TransparentPostLight</shaderType>
						<texPath>Items/Weapons/Projectile/Flashes/Green</texPath>
					</flashGraphicData>
					<fadeInTime>0.05</fadeInTime>
					<solidTime>0.05</solidTime>
					<fadeOutTime>0.15</fadeOutTime>
					<scale>0.6</scale>
				</muzzleFlash>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Bullet_Shard</defaultProjectile>
				<warmupTime>2</warmupTime>
				<range>17.9</range>
				<forcedMissRadius>0.1</forcedMissRadius>
				<burstShotCount>3</burstShotCount>
				<ticksBetweenBurstShots>2</ticksBetweenBurstShots>
				<soundCast>Shot_Shotgun</soundCast>
				<soundCastTail>Shot_GDI_GunTail</soundCastTail>
				<muzzleFlashScale>5</muzzleFlashScale>
			</li>
		</verbs>
		<tools>
		  <li>
			<label>stock</label>
			<capacities>
			  <li>Blunt</li>
			</capacities>
			<power>9</power>
			<cooldownTime>1.2</cooldownTime>
		  </li>
		  <li>
			<label>barrel</label>
			<capacities>
			  <li>Blunt</li>
			  <li>Poke</li>
			</capacities>
			<power>9</power>
			<cooldownTime>1.2</cooldownTime>
		  </li>
		</tools>
		<weaponClasses>
			<li>RangedHeavy</li>
			<li>ShortShots</li>
		</weaponClasses>
		<requisites>
			<tiberiumResearch>
				<li>ForgottenExperimental1</li>
			</tiberiumResearch>
		</requisites>
	</TiberiumRim.TRThingDef>
	
