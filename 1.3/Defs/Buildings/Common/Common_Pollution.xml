<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<TiberiumRim.TRThingDef ParentName="StationBase_TR">
		<defName>PollutionFilter</defName>
		<label>pollution filter</label>
		<description>.</description>
		<thingCategories Inherit="false" />
		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<factionDesignation>Common</factionDesignation>
		<TRCategory>Pollution</TRCategory>
		<drawerType>MapMeshAndRealTime</drawerType>
		<tickerType>Normal</tickerType>
		<graphicData>
			<texPath>Buildings/Common/Pollution/Filter</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(2.25,2.25)</drawSize>
		</graphicData>
		<statBases>
			<MaxHitPoints>500</MaxHitPoints>
			<WorkToBuild>5000</WorkToBuild>
			<Flammability>1.0</Flammability>
			<Beauty>-10</Beauty>
		</statBases>
		<size>(2,2)</size>
		<costList>
			<Steel>200</Steel>
			<ComponentIndustrial>10</ComponentIndustrial>
		</costList>
		<requisites>
			<tiberiumResearchTasks>
				<li>TiberiumRefining_T5</li>
			</tiberiumResearchTasks>
		</requisites>
		<comps>
			<li Class="TiberiumRim.CompProperties_NetworkStructure">
				<compClass>TiberiumRim.Comp_ANS_Filter</compClass>
				<networks>
					<li>
						<networkDef>AtmosphericNetwork</networkDef>
						<networkRoles>
							<li>Transmitter</li>
							<li>Controller</li>
							<li>Storage</li>
						</networkRoles>
						<containerProps>
							<maxStorage>750</maxStorage>
							<dropContents>false</dropContents>
						</containerProps>
						<allowedValues>	
							<li>TibPollution</li>					
						</allowedValues>
					</li>
					<li>
						<networkDef>TiberiumNetwork</networkDef>
						<storeEvenly>false</storeEvenly>	
						<networkRoles>
							<li>Transmitter</li>
							<li>Producer</li>
						</networkRoles>
						<containerProps>
							<maxStorage>1250</maxStorage>
							<dropContents>false</dropContents>
							<leaveContainer>true</leaveContainer>
						</containerProps>
						<allowedValues>	
							<li>TibSludge</li>					
						</allowedValues>
					</li>
				</networks>
				<connectionPattern>++|++</connectionPattern>
			</li>
			<li Class="TiberiumRim.CompProperties_FX"> 
				<overlays>
					<li>
						<data>
							<texPath>Buildings/Common/Pollution/Filter_Overlay</texPath>
							<graphicClass>Graphic_Single</graphicClass>
							<shaderType>MoteGlow</shaderType>
							<drawSize>(2.25,2.25)</drawSize>
						</data>
						<mode>Dynamic</mode>
						<needsPower>true</needsPower>
					</li>
				</overlays>
			</li>
			<li Class="CompProperties_Glower">
				<glowRadius>2</glowRadius>
				<glowColor>(255,155,0)</glowColor>
			</li>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>255</basePowerConsumption>
			</li>
			<li Class="CompProperties_Breakdownable"/>
		</comps>
		<castEdgeShadows>false</castEdgeShadows>
		<staticSunShadowHeight>0</staticSunShadowHeight>	
		<fillPercent>1</fillPercent>
		<rotatable>false</rotatable>			
		<surfaceType>Item</surfaceType>
	</TiberiumRim.TRThingDef>
	
	<TiberiumRim.TRThingDef ParentName="StationBase_TR">
		<defName>AtmosphericVentIn</defName>
		<label>pollution vent (intake)</label>
		<description>.</description>
