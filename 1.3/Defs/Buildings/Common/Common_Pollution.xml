		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<factionDesignation>Common</factionDesignation>
		<TRCategory>Pollution</TRCategory>
		<drawerType>MapMeshAndRealTime</drawerType>
		<tickerType>Normal</tickerType>
		<uiIconPath>Buildings/Common/Pollution/Intake/icon</uiIconPath>
		<graphicData>
			<texPath>Buildings/Common/Pollution/Intake/base</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(1.25,1.25)</drawSize>
		</graphicData>
		<extraData>
			<drawOffset>(0,0,0.1)</drawOffset>
		</extraData>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<WorkToBuild>1500</WorkToBuild>
			<Flammability>1.0</Flammability>
			<Beauty>-10</Beauty>
		</statBases>
		<size>(1,1)</size>
		<costList>
			<Steel>50</Steel>
			<ComponentIndustrial>1</ComponentIndustrial>
		</costList>
		<comps>
			<li Class="TiberiumRim.CompProperties_ANS_AirVent">
				<networks>
					<li>
						<networkDef>AtmosphericNetwork</networkDef>
						<networkRoles>
							<li>Transmitter</li>
							<li>Producer</li>
						</networkRoles>
						<containerProps>
							<maxStorage>100</maxStorage>
							<dropContents>false</dropContents>
						</containerProps>
						<allowedValues>	
							<li>TibPollution</li>					
						</allowedValues>
					</li>
				</networks>
				<connectionPattern>+</connectionPattern>
			</li>
			<li Class="TiberiumRim.CompProperties_FX"> 
				<overlays>
					<li><skip>true</skip></li>
					<li><skip>true</skip></li>
					<li>
						<data>
							<texPath>Buildings/Common/Pollution/Intake/fan</texPath>
							<graphicClass>Graphic_Single</graphicClass>
							<drawSize>(1.25,1.25)</drawSize>
						</data>
						<mode>Dynamic</mode>
						<drawOffset>(0,0,0.1)</drawOffset>
						<rotationSpeed>75</rotationSpeed>
						<needsPower>false</needsPower>
					</li>
					<li>
						<data>
							<texPath>Buildings/Common/Pollution/Intake/top</texPath>
							<graphicClass>Graphic_Single</graphicClass>
							<drawSize>(1.25,1.25)</drawSize>
						</data>
						<needsPower>false</needsPower>
					</li>
				</overlays>
			</li>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>45</basePowerConsumption>
			</li>
		</comps>
		<requisites>
			<tiberiumResearchTasks>
				<li>TiberiumRefining_T5</li>
			</tiberiumResearchTasks>
		</requisites>
		<castEdgeShadows>false</castEdgeShadows>
		<staticSunShadowHeight>0</staticSunShadowHeight>	
		<fillPercent>1</fillPercent>
		<rotatable>true</rotatable>			
		<surfaceType>Item</surfaceType>
	</TiberiumRim.TRThingDef>
	
	<TiberiumRim.TRThingDef ParentName="StationBase_TR">
		<defName>AtmosphericVentOut</defName>
		<label>pollution vent (out)</label>
		<description>.</description>
		<thingCategories Inherit="false" />
		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<factionDesignation>Common</factionDesignation>
		<TRCategory>Pollution</TRCategory>
		<drawerType>MapMeshOnly</drawerType>
		<size>(1,1)</size>
		<graphicData>
			<texPath>Buildings/Common/Pollution/Vent_Out</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(1,1)</drawSize>
		</graphicData>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<WorkToBuild>1500</WorkToBuild>
			<Flammability>1.0</Flammability>
			<Beauty>-10</Beauty>
		</statBases>
		<costList>
			<Steel>50</Steel>
			<ComponentIndustrial>1</ComponentIndustrial>
		</costList>
		<comps>
			<li Class="TiberiumRim.CompProperties_ANS_AirVent">
				<ventMode>Output</ventMode>
				<gasThroughPut>10</gasThroughPut>
				<networks>
					<li>
						<networkDef>AtmosphericNetwork</networkDef>
						<networkRoles>
							<li>Transmitter</li>
							<li>Consumer</li>
						</networkRoles>
						<containerProps>
							<maxStorage>100</maxStorage>
							<dropContents>false</dropContents>
						</containerProps>
						<allowedValues>	
							<li>TibPollution</li>					
						</allowedValues>
					</li>
				</networks>
				<connectionPattern>+</connectionPattern>
			</li>
		</comps>
		<requisites>
			<tiberiumResearchTasks>
				<li>TiberiumRefining_T5</li>
			</tiberiumResearchTasks>
		</requisites>
		<tickerType>Normal</tickerType>
		<castEdgeShadows>false</castEdgeShadows>
		<staticSunShadowHeight>0</staticSunShadowHeight>	
		<fillPercent>1</fillPercent>
		<rotatable>true</rotatable>			
		<surfaceType>Item</surfaceType>
	</TiberiumRim.TRThingDef>
	
