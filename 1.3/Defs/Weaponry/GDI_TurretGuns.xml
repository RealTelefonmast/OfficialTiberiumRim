<Defs>

	<ThingDef ParentName="BaseWeapon_TR">
		<defName>Gun_Juggernaut</defName>
		<label>juggernaut gun</label>
		<description>Advanced artillery. Lobs bombs over walls. Very inaccurate but long-ranged.</description>
		<graphicData>
			<texPath>Buildings/GDI/Defense/Juggernaut/Turret</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<soundInteract>Interact_Rifle</soundInteract>
		<destroyOnDrop>true</destroyOnDrop>
		<tradeability>None</tradeability>
		<useHitPoints>false</useHitPoints>
		<statBases>
			<AccuracyTouch>1</AccuracyTouch>
			<AccuracyShort>1</AccuracyShort>
			<AccuracyMedium>1</AccuracyMedium>
			<AccuracyLong>1</AccuracyLong>
			<RangedWeapon_Cooldown>0</RangedWeapon_Cooldown>
			<DeteriorationRate>0</DeteriorationRate>
			<Mass>50</Mass>
			<Flammability>0</Flammability>
		</statBases>
		<weaponTags Inherit="false">
			<li>TurretGun</li>
		</weaponTags>
		<verbs>
			<li Class="TiberiumRim.VerbProperties_TR">
				<verbClass>TiberiumRim.Verb_TR</verbClass>
				<originOffsets>	
					<li>(-0.45,0,1)</li>
					<li>( 0.00,0,1)</li>
					<li>( 0.45,0,1)</li>
				</originOffsets>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Bullet_Juggernaut</defaultProjectile>
				<warmupTime>0</warmupTime>
				<forcedMissRadius>10</forcedMissRadius>
				<requireLineOfSight>false</requireLineOfSight>
				<minRange>14.9</minRange>
				<range>250</range>
				<burstShotCount>3</burstShotCount>
				<ticksBetweenBurstShots>20</ticksBetweenBurstShots>
				<onlyManualCast>true</onlyManualCast>
				<soundCast>Shot_GDI_Juggernaut</soundCast>
				<muzzleFlashScale>12</muzzleFlashScale>
				<targetParams>
					<canTargetLocations>true</canTargetLocations>
				</targetParams>
				<consumeFuelPerShot>1</consumeFuelPerShot>
			</li>
		</verbs>
	</ThingDef>
	
