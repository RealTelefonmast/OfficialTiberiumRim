<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- Turrets -->
	
	<ThingDef ParentName="BaseWeapon_TR">
		<defName>Gun_NodObelisk</defName>
		<label>obelisk gun</label>
		<description>pew pew</description>
		<graphicData>
			<texPath>Buildings/Nod/Defense/Obelisk/ObeliskGun</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<soundInteract>Interact_Rifle</soundInteract>
		<destroyOnDrop>true</destroyOnDrop>
		<tradeability>None</tradeability>
		<useHitPoints>false</useHitPoints>
		<statBases>
			<AccuracyTouch>1</AccuracyTouch>
			<AccuracyShort>1</AccuracyShort>
			<AccuracyMedium>1</AccuracyMedium>
			<AccuracyLong>1</AccuracyLong>
			<RangedWeapon_Cooldown>1</RangedWeapon_Cooldown>
			<DeteriorationRate>0</DeteriorationRate>
			<Mass>50</Mass>
			<Flammability>0</Flammability>
		</statBases>
		<weaponTags Inherit="false">
			<li>TurretGun</li>
		</weaponTags>
		<verbs>
			<li Class="TeleCore.VerbProperties_Extended">
				<verbClass>TeleCore.Verb_Beam</verbClass>
				<beamProps>
					<damageDef>TRLaser</damageDef>
					<damageBase>100</damageBase>
					<stoppingPower>1</stoppingPower>
					<armorPenetration>1</armorPenetration>
					<impactEffecter>StrongBeamHit</impactEffecter>
					<impactFilth>
						<filths>
							<li>Filth_Ash, 1</li>
						</filths>
						<spreadRadius>1</spreadRadius>
					</impactFilth>
				</beamProps>
				<originEffecter>ObeliskOriginGlow</originEffecter>
				<originOffsets>
					<li>(0,0,4.5)</li>
				</originOffsets>
				<hasStandardCommand>true</hasStandardCommand>
				<requireLineOfSight>false</requireLineOfSight>
				<warmupTime>3.5</warmupTime>
				<minRange>2.9</minRange>
				<range>44.9</range>
				<chargeSound>Obelisk_Chargup</chargeSound>
				<soundCast>Obelisk_Shot</soundCast>		
				
				<!--<soundCastBeam></soundCastBeam>-->
				<beamFullWidthRange>16.9</beamFullWidthRange>
				<beamWidth>2</beamWidth>
				<burstShotCount>8</burstShotCount>
				<ticksBetweenBurstShots>16</ticksBetweenBurstShots>	
				<beamGroundFleckDef>Fleck_BeamBurn</beamGroundFleckDef>
				<beamFleckChancePerTick>0.32</beamFleckChancePerTick>
				<beamMaxDeviation>0.25</beamMaxDeviation>
				<beamCurvature>0.6</beamCurvature>
				<beamMoteDef>Mote_ObeliskBeam</beamMoteDef>
				<beamEndEffecterDef>GraserBeam_End</beamEndEffecterDef>
				<beamChanceToStartFire>0.85</beamChanceToStartFire>
				<beamChanceToAttachFire>0.85</beamChanceToAttachFire>
				<beamFireSizeRange>0.55~0.85</beamFireSizeRange>
				<beamLineFleckDef>Fleck_BeamSpark</beamLineFleckDef>
				<beamStartOffset>0.15</beamStartOffset>
				<beamLineFleckChanceCurve>
					<points>
						<li>(0, 0)</li>
						<li>(0.65, 0.4)</li>
						<li>(1, 0.75)</li>
					</points>
				</beamLineFleckChanceCurve>
			</li>
		</verbs>
	</ThingDef>


	<ThingDef ParentName="MoteBase">
		<defName>Mote_ObeliskBeam</defName>
		<thingClass>MoteDualAttached</thingClass>
		<altitudeLayer>MoteOverhead</altitudeLayer>
		<mote>
			<fadeInTime>0.2</fadeInTime>
			<fadeOutTime>0.3</fadeOutTime>
			<solidTime>999999</solidTime>
			<needsMaintenance>True</needsMaintenance>
			<rotateTowardsTarget>True</rotateTowardsTarget>
			<scaleToConnectTargets>True</scaleToConnectTargets>
			<fadeOutUnmaintained>True</fadeOutUnmaintained>
		</mote>
		<drawOffscreen>true</drawOffscreen>
		<graphicData>
			<texPath>Items/Weapons/Projectile/Bullet_ObeliskBeam</texPath>
			<graphicClass>Graphic_MoteWithAgeSecs</graphicClass>
			<shaderType>MoteBeam</shaderType>
			<shaderParameters>
				<_ExtraTexA>/Things/Mote/BeamSecondaryNoise_A</_ExtraTexA>
				<_ExtraTexB>/Things/Mote/BeamSecondaryNoise_B</_ExtraTexB>
				<_ScrollSpeedA>-2 </_ScrollSpeedA>
				<_ScrollSpeedB>1</_ScrollSpeedB>
				<_Intensity>1</_Intensity>
			</shaderParameters>
		</graphicData>
	</ThingDef>

	<ThingDef ParentName="BaseWeapon_TR">
		<defName>Gun_ShredderTurret</defName>
		<label>shredder turret gun</label>
		<graphicData>
			<texPath>Buildings/Nod/Defense/Turrets/Shredder_Base</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<soundInteract>Interact_Rifle</soundInteract>
		<destroyOnDrop>true</destroyOnDrop>
		<tradeability>None</tradeability>
		<useHitPoints>false</useHitPoints>
		<statBases>
			<AccuracyTouch>1</AccuracyTouch>
			<AccuracyShort>1</AccuracyShort>
			<AccuracyMedium>1</AccuracyMedium>
			<AccuracyLong>1</AccuracyLong>
			<RangedWeapon_Cooldown>0</RangedWeapon_Cooldown>
			<DeteriorationRate>0</DeteriorationRate>
			<Mass>50</Mass>
			<Flammability>0</Flammability>
		</statBases>
		<weaponTags Inherit="false">
			<li>TurretGun</li>
		</weaponTags>
		<verbs>
			<li Class="TeleCore.VerbProperties_Extended">
				<verbClass>TeleCore.Verb_ProjectileExtended</verbClass>
				<originOffsets>	
					<li>(0.25,0,0.85)</li>
					<li>(-0.25,0,0.85)</li>
				</originOffsets>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Bullet_Shredder</defaultProjectile>
				<warmupTime>1.5</warmupTime>
				<range>17.9</range>
				<burstShotCount>2</burstShotCount>
				<ticksBetweenBurstShots>15</ticksBetweenBurstShots>
				<soundCast>Shot_Nod_Shredder</soundCast>
				<soundCastTail>GunTail_Heavy</soundCastTail>
				<muzzleFlashScale>9</muzzleFlashScale>
				<consumeFuelPerShot>0.5</consumeFuelPerShot>
			</li>
		</verbs>
	</ThingDef>
	
	<ThingDef ParentName="BaseWeapon_TR">
		<defName>Gun_FlameTurret</defName>
		<label>flame turret gun</label>
		<graphicData>
			<texPath>Buildings/Nod/Defense/Turrets/Flamer</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<soundInteract>Interact_Rifle</soundInteract>
		<destroyOnDrop>true</destroyOnDrop>
		<tradeability>None</tradeability>
		<useHitPoints>false</useHitPoints>
		<statBases>
			<AccuracyTouch>1</AccuracyTouch>
			<AccuracyShort>1</AccuracyShort>
			<AccuracyMedium>1</AccuracyMedium>
			<AccuracyLong>1</AccuracyLong>
			<RangedWeapon_Cooldown>0</RangedWeapon_Cooldown>
			<DeteriorationRate>0</DeteriorationRate>
			<Mass>50</Mass>
			<Flammability>0</Flammability>
		</statBases>
		<weaponTags Inherit="false">
			<li>TurretGun</li>
		</weaponTags>
		<verbs>
			<li Class="TeleCore.VerbProperties_Extended">
				<verbClass>TeleCore.Verb_ProjectileExtended</verbClass>
				<originOffsets>	
					<li>(0,0,1.15)</li>
				</originOffsets>
				<shotIntervalTicks>5</shotIntervalTicks>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Bullet_FlamethrowerTower</defaultProjectile>
				<warmupTime>0</warmupTime>
				<range>17.9</range>
				<burstShotCount>1</burstShotCount>
				<ticksBetweenBurstShots>0</ticksBetweenBurstShots>
				<soundCast>Shot_Nod_Flame</soundCast>
				<soundCastTail>GunTail_Heavy</soundCastTail>
				<muzzleFlashScale>0</muzzleFlashScale>
				<consumeFuelPerShot>0.2</consumeFuelPerShot>
			</li>
		</verbs>
	</ThingDef>

</Defs>
