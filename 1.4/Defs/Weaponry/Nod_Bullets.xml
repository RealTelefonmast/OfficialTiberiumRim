			<shadowSize>1.8</shadowSize>			
		</projectile>
		<modExtensions>
			<li Class="TeleCore.TeleDefExtension">
				<projectile>
					<impactEffecter>FlameHit</impactEffecter>
				</projectile>
			</li>
		</modExtensions>
	</TR.TRThingDef>
	
