		<altitudeLayer>MoteLow</altitudeLayer>
		<graphicData>
			<shaderParameters>
				<_distortionIntensity>0.5</_distortionIntensity>
				<_brightnessMultiplier>2</_brightnessMultiplier>
			</shaderParameters>
			<drawSize>3</drawSize>
		</graphicData>
		<fadeInTime>0</fadeInTime>
