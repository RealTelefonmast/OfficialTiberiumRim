<Defs>

	<ThingDef ParentName="ResourceBase_TR">
		<defName>TiberiumPlantTree</defName>
		<label>tiberium wood</label>
		<description>This wood-like matter is unfortunately not usable like regular wood, except you want to breathe toxic spores all day. However it might be useful for medical application.</description>
		<graphicData>
			<texPath>Items/Resource/TiberiumWood</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<resourceReadoutPriority>First</resourceReadoutPriority>
		<soundInteract>Wood_Drop</soundInteract>
		<soundDrop>Wood_Drop</soundDrop>	
		<statBases>
			<MaxHitPoints>75</MaxHitPoints>
			<DeteriorationRate>2</DeteriorationRate>
			<MarketValue>25</MarketValue>
			<Mass>0.1</Mass>
			<Flammability>0.65</Flammability>
		</statBases>
		<thingCategories>
			<li>TiberiumItems</li>
		</thingCategories>
		<stackLimit>75</stackLimit>
    </ThingDef>
	
