<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	
	<TR.TerrainFilterDef>
		<defName>TerrainFilter_AllSoil</defName>
		<acceptedFilters>
			<li>TerrainFilter_Soil</li>
			<li>TerrainFilter_RichSoil</li>
		</acceptedFilters>
	</TR.TerrainFilterDef>
	
	<TR.TerrainFilterDef>
		<defName>TerrainFilter_Soil</defName>
		<acceptedTerrain>
			<li>Soil</li>
			<li>MarshyTerrain</li>
			<li>Gravel</li>
		</acceptedTerrain>
		<acceptedTags>
			<li>soil</li>
		</acceptedTags>
		<ignoreTags>
			<li>rich</li>
		</ignoreTags>
	</TR.TerrainFilterDef>
	
	<TR.TerrainFilterDef>
		<defName>TerrainFilter_RichSoil</defName>
		<acceptedTerrain>
			<li>SoilRich</li>
		</acceptedTerrain>
		<acceptedTags>
			<li>soilrich</li>
		</acceptedTags>
	</TR.TerrainFilterDef>
	
	<TR.TerrainFilterDef>
		<defName>TerrainFilter_TibSoil</defName>
		<acceptedFilters>
			<li>TerrainFilter_AllSoil</li>
		</acceptedFilters>
		<neededTags>
			<li>tiberium</li>
		</neededTags>
	</TR.TerrainFilterDef>
	
	<!---->
