<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
	<TR.TRThingDef ParentName="ScrinBuildings">
		<defName>ScrinDronePlatform</defName>
		<label>scrin drone platform</label>
		<description>We have arrived.</description>
		<thingClass>TR.DronePlatform</thingClass>
		<size>(3,3)</size>
		<drawerType>MapMeshAndRealTime</drawerType>
		<graphicData>
			<texPath>Buildings/Scrin/DronePlatform/platform</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(4.5,9)</drawSize>
			<drawOffset>(0,0,0.175)</drawOffset>
		</graphicData>
		<altitudeLayer>BuildingOnTop</altitudeLayer>
		<stealable>false</stealable>
		<rotatable>false</rotatable>
		<statBases>
			<MaxHitPoints>460</MaxHitPoints>
			<Flammability>0.40</Flammability>
			<WorkToBuild>12000</WorkToBuild>
			<Mass>1000</Mass>
			<Beauty>5</Beauty>
		</statBases>
		<comps>
			<li Class="TeleCore.CompProperties_FX"> 
				<fxLayers>	
					<li>
						<graphicData>
							<texPath>Buildings/Scrin/DronePlatform/overlay</texPath>
							<graphicClass>Graphic_Single</graphicClass>
							<shaderType>MoteGlow</shaderType>
							<drawSize>(4.5,9)</drawSize>
						</graphicData>
						<fxMode>Dynamic</fxMode>
					    <fade>
							<opacityRange>0.55~0.9</opacityRange>
						</fade>
					</li>
				</fxLayers>
			</li>
		</comps>
		<tickerType>Normal</tickerType>
		<drawOffscreen>false</drawOffscreen>
		<passability>Impassable</passability>
		<fillPercent>0.4</fillPercent>
		<hasTooltip>true</hasTooltip>
		<terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
		<specialDisplayRadius>39.9</specialDisplayRadius>
		<makesTerrain>ScrinFloor</makesTerrain>
		<building>
			<ai_combatDangerous>true</ai_combatDangerous>
		</building>
		<placeWorkers>
			<li>TR.PlaceWorker_OnlyOutside</li>
		</placeWorkers>
		<modExtensions>
			<li Class="TeleCore.FXDefExtension">
				<rotateDrawSize>false</rotateDrawSize>
				<alignToBottom>false</alignToBottom>
			</li>
		</modExtensions>
	</TR.TRThingDef>

