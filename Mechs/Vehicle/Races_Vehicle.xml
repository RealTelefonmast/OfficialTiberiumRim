<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef ParentName="BaseTRMechanical">
    <defName>FlameTank</defName>
    <label>Flame tank</label>
    <description>The Flame tank can incinerate infantry with ease and clear out garrisoned buildings effortlessly.</description>
    <statBases>
		<MoveSpeed>2.5</MoveSpeed>
		<ArmorRating_Blunt>0.6</ArmorRating_Blunt>
		<ArmorRating_Sharp>0.8</ArmorRating_Sharp>
		<ArmorRating_Heat>0.8</ArmorRating_Heat>
    </statBases>
    <tools>
      <li>
        <label>dozer</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>10</power>
        <cooldownTime>1.5</cooldownTime>
        <linkedBodyPartsGroup>Dozer</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
      </li>
    </tools>
    <race>
      <intelligence>ToolUser</intelligence>
      <thinkTreeMain>Mechanoid</thinkTreeMain>
      <body>BasicVehicleBody</body>
      <baseBodySize>2</baseBodySize>
      <baseHealthScale>1</baseHealthScale>
      <lifeStageAges>
        <li>
          <def>VehicleFormed</def>
          <minAge>0</minAge>
          <soundWounded>VehicleTanks_Wounded</soundWounded>
          <soundDeath>VehicleTanks_Death</soundDeath>
          <soundCall>VehicleTanks_Call</soundCall>
        </li>
      </lifeStageAges>
	  <soundCallIntervalRange>
        <min>250</min>
        <max>500</max>
      </soundCallIntervalRange>
      <soundMeleeHitPawn>VehicleTanks_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>VehicleTanks_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>VehicleTanks_Miss</soundMeleeMiss>
    </race>
    <butcherProducts>
      <Steel>120</Steel>
      <ComponentIndustrial>5</ComponentIndustrial>
      <TRBattleChip>1</TRBattleChip>
    </butcherProducts>
  </ThingDef>
  

