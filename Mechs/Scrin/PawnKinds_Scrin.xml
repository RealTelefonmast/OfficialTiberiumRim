 	<PawnKindDef>
		<defName>Scrin_Mechapede</defName>
		<label>Mechapede</label>
		<race>Mechapede</race>
		<combatPower>450</combatPower>
		<defaultFactionType>Scrin</defaultFactionType>
		<aiAvoidCover>true</aiAvoidCover>
		<lifeStages>
			<li>
				<bodyGraphicData>
					<texPath>Pawns/Mechanical/Scrin/Mechapede</texPath>
					<graphicClass>Graphic_Multi</graphicClass>
					<drawSize>3.5</drawSize>
					<shadowData>
						<volume>(0.8, 0.8, 0.8)</volume>
