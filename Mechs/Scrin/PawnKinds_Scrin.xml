	<techHediffsMoney>
		<min>2000</min>
		<max>2000</max>
	</techHediffsMoney>
	<techHediffsTags>
		<li>MechInfuse</li>
	</techHediffsTags>
	<techHediffsChance>1</techHediffsChance>
	<inventoryOptions>
      <skipChance>0.5</skipChance>
      <subOptionsChooseOne>
        <li>
          <choiceChance>100</choiceChance>
          <thingDef>TRBattleChip</thingDef>
          <countRange>
            <min>1</min>
            <max>5</max>
          </countRange>
        </li>
      </subOptionsChooseOne>
	</inventoryOptions>
	</PawnKindDef>

